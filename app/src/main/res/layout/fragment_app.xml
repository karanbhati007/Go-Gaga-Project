<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/part1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:id="@+id/card1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorLight"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp">

                    <TextView
                        android:id="@+id/alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Alert" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/blackLight"
                        android:layout_below="@id/alert"
                        android:textSize="19sp"
                        android:text="Sound" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/ic_circle_switch"
                        android:track="@drawable/thumb_selector"
                        android:layout_below="@id/alert"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:layout_below="@id/card1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/card2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
               android:background="@color/colorLight"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp">

                    <TextView
                        android:id="@+id/only"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Matchmaker-Only Mode" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/blackLight"
                        android:layout_below="@id/only"
                        android:textSize="19sp"
                        android:text="Hide My Profile" />

                    <Switch
                        android:id="@+id/switch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/ic_circle_switch"
                        android:track="@drawable/thumb_selector"
                        android:layout_below="@id/only"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:layout_below="@id/card2"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/part3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/selector3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorLight"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Select Language" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/language"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Language"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/arrow"
                                android:textSize="16sp"
                                android:layout_marginEnd="7dp"
                                android:layout_centerVertical="true"
                                android:text="English"/>

                            <ImageView
                                android:id="@+id/arrow"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/app_arrow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="TODO" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:layout_below="@id/selector3"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/part4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part3"
            android:layout_marginTop="30dp" >

            <androidx.cardview.widget.CardView
                android:id="@+id/selector4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:textColor="#3A3636"
                        android:text="Enable notifications from GoGaga"/>

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:text="Go"
                        android:textColor="@color/whiteColour"
                        android:background="@drawable/round_button"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app4"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="13sp"
                android:layout_below="@id/selector4"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>